                }

                if ($('#Password').val() === "") {
                    $("#password_notif").show();
                    return false;
                } else {
                    $("#password_notif").hide();
                }

                if ($('#ConfirmPassword').val() === "") {
                    $("#confirmpassword_notif").show();
                    return false;
                } else {
                    $("#confirmpassword_notif").hide();
                }
                if ($('#ConfirmPassword').val() != $('#Password').val()) {
                    $("#matchpassword_notif").show();
                    return false;
                } else {
                    $("#matchpassword_notif").hide();
                }

                if ($('#City').val() === "") {
                    $("#city_notif").show();
                    return false;
                } else {
                    $("#city_notif").hide();
                }

                if ($('#State').val() === "") {
                    $("#state_notif").show();
                    return false;
                } else {
                    $("#state_notif").hide();
                }

                if ($('#ZipCode').val() === "") {
                    $("#zip_notif").show();
                    return false;
                } else {
                    $("#zip_notif").hide();
                }

                if ($('#Country').val() === "") {
                    $("#country_notif").show();
                    return false;
                } else {
                    $("#country_notif").hide();
                }


                var userInfo = new Object();
                userInfo.FirstName = $('#FirstName').val();
                userInfo.LastName = $('#LastName').val();
                userInfo.UserName = $('#UserName').val();
                userInfo.EmailId = $('#EmailId').val();
                userInfo.PhoneNumber = $('#PhoneNumber').val();
                userInfo.Dob = $('#Dob').val();
                userInfo.Gender = $('#Gender').val();
                userInfo.Password = $('#Password').val();
                userInfo.ConfirmPassword = $('#ConfirmPassword').val();
                userInfo.AddressLine1 = $('#AddressLine1').val();
                userInfo.AddressLine2 = $('#AddressLine2').val();
                userInfo.LandMark = $('#LandMark').val();
                userInfo.City = $('#City').val();
                userInfo.State = $('#State').val();
                userInfo.ZipCode = $('#ZipCode').val();
                userInfo.Country = $('#Country').val();

                $.ajax({
                    url: "/User/CreateUser",
                    type: 'POST',
                    dataType: "json",
                    data: userInfo,
                    success: function (response) {
                        if (response.message === "User created") {
                            window.location.href = "/Home/Index";
                        } else {
                            alert("Invalid Input");
                        }
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

